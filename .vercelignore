# Ignore version control directories and files
.git
.gitignore

# Ignore dependency directories (they will be installed during the build)
node_modules

# Ignore build output directories (Next.js will build fresh)
.next
dist
out

# Ignore IDE/editor settings
.vscode
.idea
.cursor
.taskmaster

# Ignore Vercel local config directory
.vercel

# Ignore test, coverage, and documentation files
coverage
docs
documentation
__tests__
**/*.test.*
**/*.spec.*

# Ignore environment variable files (use environment variables in Vercel dashboard)
.env
.env.*

